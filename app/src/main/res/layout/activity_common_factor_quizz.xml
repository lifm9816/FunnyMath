<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Common_factor_quizz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Quiz de factor común"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/writing"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Pregunta 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1. ¿Cuál es el factor común en la expresión: 15x²y + 10xy²?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5xy"/>

                            <RadioButton
                                android:id="@+id/radio1_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5x"/>

                            <RadioButton
                                android:id="@+id/radio1_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5y"/>

                            <RadioButton
                                android:id="@+id/radio1_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xy"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Pregunta 2 (Selección múltiple) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2. Selecciona las expresiones que tienen como factor común 3x:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <CheckBox
                            android:id="@+id/check2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6x² + 9x"/>

                        <CheckBox
                            android:id="@+id/check2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3x³ + 3xy"/>

                        <CheckBox
                            android:id="@+id/check2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3x + 3"/>

                        <CheckBox
                            android:id="@+id/check2_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9x² - 3x"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3. ¿Cuál es el factor común en: 12x³y² - 6x²y²?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio3_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6x²y²"/>

                            <RadioButton
                                android:id="@+id/radio3_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2xy²"/>

                            <RadioButton
                                android:id="@+id/radio3_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6xy²"/>

                            <RadioButton
                                android:id="@+id/radio3_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3x²y²"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4. En la expresión 8x⁴ + 4x³, el factor común es:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio4_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x⁴"/>

                            <RadioButton
                                android:id="@+id/radio4_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x³"/>

                            <RadioButton
                                android:id="@+id/radio4_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x"/>

                            <RadioButton
                                android:id="@+id/radio4_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x³"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5. Selecciona las expresiones que tienen a 2x² como factor común:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <CheckBox
                            android:id="@+id/check5_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4x³ + 2x²y"/>

                        <CheckBox
                            android:id="@+id/check5_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6x⁴ - 2x²"/>

                        <CheckBox
                            android:id="@+id/check5_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2x² + 4x"/>

                        <CheckBox
                            android:id="@+id/check5_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4x² + 8x³"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6. El factor común de 15x²y³ + 10x²y² es:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio6_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5x²y²"/>

                            <RadioButton
                                android:id="@+id/radio6_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5xy²"/>

                            <RadioButton
                                android:id="@+id/radio6_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5x²y"/>

                            <RadioButton
                                android:id="@+id/radio6_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5xy"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7. Marca las expresiones donde &quot;a&quot; es factor común:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <CheckBox
                            android:id="@+id/check7_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="a² + ab"/>

                        <CheckBox
                            android:id="@+id/check7_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ab + b²"/>

                        <CheckBox
                            android:id="@+id/check7_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="a³ + a"/>

                        <CheckBox
                            android:id="@+id/check7_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ac + ad"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8. En la expresión 3xy² + 6x²y², el factor común es:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio8_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3xy²"/>

                            <RadioButton
                                android:id="@+id/radio8_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xy²"/>

                            <RadioButton
                                android:id="@+id/radio8_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3y²"/>

                            <RadioButton
                                android:id="@+id/radio8_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3x"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9. Selecciona las expresiones que tienen como factor común 4z:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <CheckBox
                            android:id="@+id/check9_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8z² + 4z"/>

                        <CheckBox
                            android:id="@+id/check9_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4z³ - 12z²"/>

                        <CheckBox
                            android:id="@+id/check9_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4z + 4"/>

                        <CheckBox
                            android:id="@+id/check9_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16z² - 8z"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10. ¿Cuál es el factor común en 25x³y² - 15x²y²?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio10_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5x²y²"/>

                            <RadioButton
                                android:id="@+id/radio10_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5xy²"/>

                            <RadioButton
                                android:id="@+id/radio10_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5x²y"/>

                            <RadioButton
                                android:id="@+id/radio10_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5x³y²"/>
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verificar Respuestas"
                    android:backgroundTint="@color/green"
                    android:layout_marginTop="16dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>