<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Perfect_square_trinomial_quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Quiz de trinomio al cuadrao perfecto"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/writing" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="1. ¿Cuál de los siguientes trinomios NO es un trinomio cuadrado perfecto?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer1a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x² + 10x + 25" />

                            <RadioButton
                                android:id="@+id/answer1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9a² - 12a + 4" />

                            <RadioButton
                                android:id="@+id/answer1c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4y² + 6y + 9" />

                            <RadioButton
                                android:id="@+id/answer1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16m² - 40mn + 25n²" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="2. Factoriza el siguiente trinomio cuadrado perfecto: 25x² + 30xy + 9y²"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer2a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x + 3y)²" />

                            <RadioButton
                                android:id="@+id/answer2b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x - 3y)²" />

                            <RadioButton
                                android:id="@+id/answer2c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x + 3y)(5x - 3y)" />

                            <RadioButton
                                android:id="@+id/answer2d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede factorizar" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="3. Completa el siguiente trinomio para que sea un trinomio cuadrado perfecto:  a² - 8a + ___"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer3a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4" />

                            <RadioButton
                                android:id="@+id/answer3b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8" />

                            <RadioButton
                                android:id="@+id/answer3c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16" />

                            <RadioButton
                                android:id="@+id/answer3d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="64" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="4. Si el área de un cuadrado se expresa como el trinomio 4x² + 12x + 9, ¿cuál es la longitud de uno de sus lados?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2x + 3" />

                            <RadioButton
                                android:id="@+id/answer4b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2x - 3" />

                            <RadioButton
                                android:id="@+id/answer4c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x + 3" />

                            <RadioButton
                                android:id="@+id/answer4d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x - 3" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="5. ¿Cuál de las siguientes expresiones representa la factorización del trinomio cuadrado perfecto m⁴ + 2m²n² + n⁴?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer5a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(m² + n²)²" />

                            <RadioButton
                                android:id="@+id/answer5b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(m² - n²)²" />

                            <RadioButton
                                android:id="@+id/answer5c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(m + n)²" />

                            <RadioButton
                                android:id="@+id/answer5d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(m - n)²" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="6. ¿Cuál es el término que falta para que la expresión sea un trinomio cuadrado perfecto?  x² +  ___  + 49"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer6a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7x" />

                            <RadioButton
                                android:id="@+id/answer6b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14x" />

                            <RadioButton
                                android:id="@+id/answer6c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="49x" />

                            <RadioButton
                                android:id="@+id/answer6d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98x" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="7. Factoriza la expresión: 16a² - 24ab + 9b²"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer7a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4a + 3b)²" />

                            <RadioButton
                                android:id="@+id/answer7b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4a - 3b)²" />

                            <RadioButton
                                android:id="@+id/answer7c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(8a - 3b)²" />

                            <RadioButton
                                android:id="@+id/answer7d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4a + 3b)(4a - 3b)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="8.  Si (x + a)² = x² + 10x + 25, ¿cuál es el valor de 'a'?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer8a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2" />

                            <RadioButton
                                android:id="@+id/answer8b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5" />

                            <RadioButton
                                android:id="@+id/answer8c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10" />

                            <RadioButton
                                android:id="@+id/answer8d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="9. Si un cuadrado tiene lados de longitud (3y - 5), ¿cuál de las siguientes expresiones representa su área?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer9a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9y² + 25" />

                            <RadioButton
                                android:id="@+id/answer9b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9y² - 15y + 25" />

                            <RadioButton
                                android:id="@+id/answer9c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9y² - 30y + 25" />

                            <RadioButton
                                android:id="@+id/answer9d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6y² - 30y + 25" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="10. Desarrolla la expresión: (3m - 2n)²"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer10a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9m² + 4n²" />

                            <RadioButton
                                android:id="@+id/answer10b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9m² - 4n²" />

                            <RadioButton
                                android:id="@+id/answer10c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9m² - 6mn + 4n²" />

                            <RadioButton
                                android:id="@+id/answer10d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9m² - 12mn + 4n²" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>