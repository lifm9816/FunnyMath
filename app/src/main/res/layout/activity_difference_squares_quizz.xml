<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Difference_squares_quizz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Quiz de diferencia de cuadrados"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/writing" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="1. Factoriza la expresión: 4x² - 49"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer1a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2x + 7)(2x + 7)" />

                            <RadioButton
                                android:id="@+id/answer1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2x - 7)(2x - 7)" />

                            <RadioButton
                                android:id="@+id/answer1c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2x + 7)(2x - 7)" />

                            <RadioButton
                                android:id="@+id/answer1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4x + 7)(x - 7)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="2. ¿Cuál de las siguientes expresiones es una diferencia de cuadrados?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer2a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9x² + 16" />

                            <RadioButton
                                android:id="@+id/answer2b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25a² - 10b" />

                            <RadioButton
                                android:id="@+id/answer2c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16m⁴ - 81n²" />

                            <RadioButton
                                android:id="@+id/answer2d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x² + 2xy + y²" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="3. Factoriza la expresión: 100p⁶ - 1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer3a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(10p³ + 1)(10p³ - 1)" />

                            <RadioButton
                                android:id="@+id/answer3b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(10p² + 1)(10p⁴ - 1)" />

                            <RadioButton
                                android:id="@+id/answer3c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(100p³ + 1)(p³ - 1)" />

                            <RadioButton
                                android:id="@+id/answer3d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede factorizar" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="4. Factoriza la expresión: (x + 2)² - 9"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 5)(x - 1)" />

                            <RadioButton
                                android:id="@+id/answer4b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 1)(x - 5)" />

                            <RadioButton
                                android:id="@+id/answer4c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 5)(x + 1)" />

                            <RadioButton
                                android:id="@+id/answer4d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x - 1)(x - 1)" />
                        </RadioGroup>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="5. Si la expresión  x² - y²  representa el área de un rectángulo, ¿cuáles serían las posibles expresiones para la longitud y el ancho del rectángulo?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer5a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Longitud: x, Ancho: y" />

                            <RadioButton
                                android:id="@+id/answer5b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Longitud: x + y, Ancho: x - y" />

                            <RadioButton
                                android:id="@+id/answer5c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Longitud: x², Ancho: y²" />

                            <RadioButton
                                android:id="@+id/answer5d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede determinar" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6. ¿Cuál es el resultado de factorizar la expresión 25x² - 1?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer6a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x - 1)(5x - 1)" />

                            <RadioButton
                                android:id="@+id/answer6b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x + 1)(5x + 1)" />

                            <RadioButton
                                android:id="@+id/answer6c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x + 1)(5x - 1)" />

                            <RadioButton
                                android:id="@+id/answer6d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede factorizar" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7. Factoriza la siguiente expresión: 1 - 81y⁴"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer7a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 + 9y²)(1 - 9y²)" />

                            <RadioButton
                                android:id="@+id/answer7b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 + 9y)(1 - 9y)" />

                            <RadioButton
                                android:id="@+id/answer7c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 + 3y²)(1 - 3y²)" />

                            <RadioButton
                                android:id="@+id/answer7d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede factorizar" />

                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8.  ¿Qué expresión representa la factorización de a⁴ - 16?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer8a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a² + 4)(a² - 4)" />

                            <RadioButton
                                android:id="@+id/answer8b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a² + 2)(a² - 2)" />

                            <RadioButton
                                android:id="@+id/answer8c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a + 2)(a - 2)" />

                            <RadioButton
                                android:id="@+id/answer8d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede factorizar" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9. Si se factoriza la expresión 16x² - 25y², ¿cuál de las siguientes opciones es un factor?"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer9a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x + 5y" />

                            <RadioButton
                                android:id="@+id/answer9b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4x - 5" />

                            <RadioButton
                                android:id="@+id/answer9c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2x + 5y" />

                            <RadioButton
                                android:id="@+id/answer9d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8x - 25y" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10. Factoriza la expresión: (x - 3)² - 49"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <RadioGroup
                            android:id="@+id/radioGroup10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer10a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 4)(x - 10)" />

                            <RadioButton
                                android:id="@+id/answer10b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x - 10)(x - 10)" />

                            <RadioButton
                                android:id="@+id/answer10c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 4)(x + 4)" />

                            <RadioButton
                                android:id="@+id/answer10d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No se puede factorizar" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>