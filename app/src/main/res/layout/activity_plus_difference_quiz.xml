<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Perfect_square_trinomial_quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Quiz de factorización de una suma o diferencia de cubos"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/writing" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="1. Factoriza la expresión: x³ + 8"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer1a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 2)(x² - 2x + 4)" />

                            <RadioButton
                                android:id="@+id/answer1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x - 2)(x² + 2x + 4)" />

                            <RadioButton
                                android:id="@+id/answer1c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 2)(x² + 2x + 4)" />

                            <RadioButton
                                android:id="@+id/answer1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x - 2)(x² - 2x + 4)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="2. Factoriza la expresión: 27y³ - 1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer2a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3y - 1)(9y² + 3y + 1)" />

                            <RadioButton
                                android:id="@+id/answer2b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3y + 1)(9y² - 3y + 1)" />

                            <RadioButton
                                android:id="@+id/answer2c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3y - 1)(9y² - 3y + 1)" />

                            <RadioButton
                                android:id="@+id/answer2d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3y + 1)(9y² + 3y + 1)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="3. Factoriza la expresión: 8a³ + 125b³"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer3a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2a + 5b)(4a² - 10ab + 25b²)" />

                            <RadioButton
                                android:id="@+id/answer3b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2a - 5b)(4a² + 10ab + 25b²)" />

                            <RadioButton
                                android:id="@+id/answer3c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2a + 5b)(4a² + 10ab + 25b²)" />

                            <RadioButton
                                android:id="@+id/answer3d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2a - 5b)(4a² - 10ab + 25b²)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="4. Factoriza la expresión: 64m³ - 27n³"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4m - 3n)(16m² + 12mn + 9n²)" />

                            <RadioButton
                                android:id="@+id/answer4b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4m + 3n)(16m² - 12mn + 9n²)" />

                            <RadioButton
                                android:id="@+id/answer4c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4m - 3n)(16m² - 12mn + 9n²)" />

                            <RadioButton
                                android:id="@+id/answer4d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4m + 3n)(16m² + 12mn + 9n²)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="5. ¿Cuál de las siguientes expresiones NO es un cubo perfecto?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer5a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8x³" />

                            <RadioButton
                                android:id="@+id/answer5b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="27y⁶" />

                            <RadioButton
                                android:id="@+id/answer5c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="125a²" />

                            <RadioButton
                                android:id="@+id/answer5d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="64m⁹" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="6. Factoriza la expresión: 1 + 8x³"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer6a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 + 2x)(1 - 2x + 4x²)" />

                            <RadioButton
                                android:id="@+id/answer6b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 - 2x)(1 + 2x + 4x²)" />

                            <RadioButton
                                android:id="@+id/answer6c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 + 2x)(1 + 2x + 4x²)" />

                            <RadioButton
                                android:id="@+id/answer6d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1 - 2x)(1 - 2x + 4x²)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="7. Factoriza la expresión: 125 - 27y³"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer7a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5 + 3y)(25 - 15y + 9y²)" />

                            <RadioButton
                                android:id="@+id/answer7b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5 - 3y)(25 + 15y + 9y²)" />

                            <RadioButton
                                android:id="@+id/answer7c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5 - 3y)(25 - 15y + 9y²)" />

                            <RadioButton
                                android:id="@+id/answer7d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5 + 3y)(25 + 15y + 9y²)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="8. Factoriza la expresión:  a⁶b³ + 27c³"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer8a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a²b + 3c)(a⁴b² - 3a²bc + 9c²)" />

                            <RadioButton
                                android:id="@+id/answer8b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a²b - 3c)(a⁴b² + 3a²bc + 9c²)" />

                            <RadioButton
                                android:id="@+id/answer8c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a²b + 3c)(a⁴b² + 3a²bc + 9c²)" />

                            <RadioButton
                                android:id="@+id/answer8d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(a²b - 3c)(a⁴b² - 3a²bc + 9c²)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="9. Factoriza la expresión: 8m⁶ - 125n⁹"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer9a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2m² - 5n³)(4m⁴ + 10m²n³ + 25n⁶)" />

                            <RadioButton
                                android:id="@+id/answer9b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2m² + 5n³)(4m⁴ - 10m²n³ + 25n⁶)" />

                            <RadioButton
                                android:id="@+id/answer9c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2m² - 5n³)(4m⁴ - 10m²n³ + 25n⁶)" />

                            <RadioButton
                                android:id="@+id/answer9d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2m² + 5n³)(4m⁴ + 10m²n³ + 25n⁶)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="10.  ¿Cuál de las siguientes expresiones es la factorización de 216p³ + 125?"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer10a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(6p + 5)(36p² - 30p + 25)" />

                            <RadioButton
                                android:id="@+id/answer10b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(6p - 5)(36p² + 30p + 25)" />

                            <RadioButton
                                android:id="@+id/answer10c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(6p + 5)(36p² + 30p + 25)" />

                            <RadioButton
                                android:id="@+id/answer10d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(6p - 5)(36p² - 30p + 25)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>