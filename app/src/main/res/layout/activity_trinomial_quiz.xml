<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Trinomial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Quiz de trinomio de la forma ax^2+bx+c"
                android:textColor="@color/green"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/writing" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="1. Factoriza el trinomio: 2x² + 7x + 3"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer1a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2x + 1)(x + 3)" />

                            <RadioButton
                                android:id="@+id/answer1b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 1)(2x + 3)" />

                            <RadioButton
                                android:id="@+id/answer1c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2x + 3)(x + 1)" />

                            <RadioButton
                                android:id="@+id/answer1d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x + 3)(2x + 1)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="2. Factoriza el trinomio: 3y² - 10y + 8"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer2a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3y - 4)(y - 2)" />

                            <RadioButton
                                android:id="@+id/answer2b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(y - 4)(3y - 2)" />

                            <RadioButton
                                android:id="@+id/answer2c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3y - 2)(y - 4)" />

                            <RadioButton
                                android:id="@+id/answer2d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(y - 2)(3y - 4)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="3. Factoriza el trinomio: 6a² + 11a - 10"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer3a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2a - 5)(3a + 2)" />

                            <RadioButton
                                android:id="@+id/answer3b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3a - 5)(2a + 2)" />

                            <RadioButton
                                android:id="@+id/answer3c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2a + 5)(3a - 2)" />

                            <RadioButton
                                android:id="@+id/answer3d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3a + 5)(2a - 2)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="4. Factoriza el trinomio: 4m² - 17m + 4"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer4a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4m - 1)(m - 4)" />

                            <RadioButton
                                android:id="@+id/answer4b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(m - 1)(4m - 4)" />

                            <RadioButton
                                android:id="@+id/answer4c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2m - 1)(2m - 4)" />

                            <RadioButton
                                android:id="@+id/answer4d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4m - 4)(m - 1)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="5. Factoriza el trinomio: 10p² + 13p - 3"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer5a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2p - 3)(5p + 1)" />

                            <RadioButton
                                android:id="@+id/answer5b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5p - 3)(2p + 1)" />

                            <RadioButton
                                android:id="@+id/answer5c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2p + 3)(5p - 1)" />

                            <RadioButton
                                android:id="@+id/answer5d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5p + 3)(2p - 1)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="6. Factoriza el trinomio: 5x² - 16x + 3"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer6a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x - 1)(x - 3)" />

                            <RadioButton
                                android:id="@+id/answer6b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x - 1)(5x - 3)" />

                            <RadioButton
                                android:id="@+id/answer6c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5x - 3)(x - 1)" />

                            <RadioButton
                                android:id="@+id/answer6d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(x - 3)(5x - 1)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="7. Factoriza el trinomio: 8y² + 10y - 3"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer7a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4y - 1)(2y + 3)" />

                            <RadioButton
                                android:id="@+id/answer7b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2y - 1)(4y + 3)" />

                            <RadioButton
                                android:id="@+id/answer7c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4y + 1)(2y - 3)" />

                            <RadioButton
                                android:id="@+id/answer7d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2y + 1)(4y - 3)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="8. Factoriza el trinomio: 12a² - 7a - 12"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer8a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4a + 3)(3a - 4)" />

                            <RadioButton
                                android:id="@+id/answer8b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3a + 4)(4a - 3)" />

                            <RadioButton
                                android:id="@+id/answer8c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(4a - 3)(3a + 4)" />

                            <RadioButton
                                android:id="@+id/answer8d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3a - 4)(4a + 3)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="9. Factoriza el trinomio: 9m² + 24m + 16"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer9a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3m + 4)(3m + 4)" />

                            <RadioButton
                                android:id="@+id/answer9b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(9m + 4)(m + 4)" />

                            <RadioButton
                                android:id="@+id/answer9c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3m + 8)(3m + 2)" />

                            <RadioButton
                                android:id="@+id/answer9d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(m + 4)(9m + 4)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="10. Factoriza el trinomio: 6p² - 11p - 35"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/answer10a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2p - 7)(3p + 5)" />

                            <RadioButton
                                android:id="@+id/answer10b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3p - 7)(2p + 5)" />

                            <RadioButton
                                android:id="@+id/answer10c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(2p + 7)(3p - 5)" />

                            <RadioButton
                                android:id="@+id/answer10d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(3p + 7)(2p - 5)" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>